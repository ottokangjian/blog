- var language = config.language || 'en'

doctype
html(lang=language)
  head
    include head
  body
    #main
      header
        include header
      section#container
        block container
        block tags
        block pagination
        block comment
      footer
        include footer
    if env.debug
      script(id="__bs_script__").
        document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.2.14.0.js'><\/script>".replace("HOST", location.hostname));
